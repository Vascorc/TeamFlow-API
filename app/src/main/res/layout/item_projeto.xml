<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:padding="12dp"
    android:background="@drawable/card_background">

    <!-- Nome do projeto -->
    <TextView
        android:id="@+id/textNomeProjeto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nome do Projeto"
        android:textColor="@android:color/white"
        android:letterSpacing="0.05"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textStatusProjeto"
        app:layout_constraintBottom_toTopOf="@+id/textDataProjeto"
        app:layout_constraintVertical_chainStyle="packed"/>

    <!-- Status do projeto -->
    <TextView
        android:id="@+id/textStatusProjeto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pendente"
        android:textColor="@color/hevy_blue"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textNomeProjeto"
        app:layout_constraintBottom_toBottomOf="@id/textNomeProjeto"/>

    <!-- Data da primeira tarefa -->
    <TextView
        android:id="@+id/textDataProjeto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Primeira tarefa atÃ©:"
        android:textSize="14sp"
        android:textColor="@color/hevy_blue"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/textNomeProjeto"
        app:layout_constraintTop_toBottomOf="@id/textNomeProjeto"/>

</androidx.constraintlayout.widget.ConstraintLayout>
